<div class="p-1 p-md-5">
  <div class="">
    <div
      class="d-flex justify-content-center flex-column align-self-center align-items-center px-4"
    >
      <div
        class="py-4 px-0 px-md-4 d-flex flex-column justify-content-center align-content-center align-items-center col-12 col-md-7 col-xl-5"
      >

        <h2 class="text-light">Profile</h2>

        <form
          class="d-flex flex-column justify-content-center w-100"
          action="/profile"
          method="POST"
          enctype="multipart/form-data"
        >

          <div
            class="mt-3 w-100 d-flex justify-content-center align-items-center"
          >
            <img
              id="selectedImage"
              src="{{currentUser.profilePicture}}"
              alt="Selected Banner"
              class="w-50 h-25 mt-3 rounded-circle bg-white shadow-lg"
            />
          </div>


            <label class="text-light mt-4">
              Email
            </label>
            <input
              class="mt-2 p-2 rounded-2 border-0"
              type="email"
              name="email"
              value="{{currentUser.email}}"
              disabled
              placeholder="example@gmail.com"
            />

            <label class="text-light mt-2">
              Username
            </label>
            <input
              class="mt-2 p-2 rounded-2 border-0"
              type="text"
              name="username"
              value="{{currentUser.username}}"
              placeholder="example"
            />

            <label class="text-light mt-4">
              Full name
            </label>
            <input
              class="mt-2 p-2 rounded-2 border-0"
              type="text"
              name="fullname"
              value="{{currentUser.fullname}}"
              placeholder="example"
            />

            <label class="text-light mt-4">
              Twitch
            </label>
            <input
              class="mt-2 p-2 rounded-2 border-0"
              type="text"
              name="twitch"
              value="{{currentUser.twitch}}"
              placeholder="example@gmail.com"
            />

            <label class="text-light mt-4">
              New Profile Photo
            </label>

            <input
              class="form-control form-control-sm mt-2"
              id="formFileSm"
              name="profilePicture"
              type="file"
              accept="image/jpeg, image/png, image/jpg"
              onchange="handleImageSelect(event)"
            />
          </div>

          {{! show selected image here }}

          <button
            class="mt-1 mt-md-4 px-2 py-2 bg-info border border-0 text-black fw-bold fs-6 shadow"
            type="submit"
          >Update Profile</button>

        </form>
      </div>
    </div>
  </div>
</div>

{{! content here }}
<div class="p-3 p-md-5 mt-4 mt-md-0 ">
  {{! heading }}
  <div class="d-flex flex-column flex-md-row justify-content-lg-between">
    <h4 class="text-white fs-6 text-center text-lg-start">Created Tournaments</h4>
  </div>

  {{! tournaments }}
{{#if createdTournaments}}
  <div class="col-12 d-flex flex-wrap mt-4 d-grid gap-3">
    {{! tournament card }}
    {{#each createdTournaments}}

      {{> createdTournamentCard this}}

    {{/each}}
  </div>
</div>

{{else}}

<p class="text-white text-center ">You have not created any tournaments!</p>

{{/if}}

{{! joined Tournaments }}
<div class="p-3 p-md-5">
  {{! heading }}
  <div class="d-flex flex-column flex-md-row justify-content-lg-between">
    <h4 class="text-white fs-6 text-center text-lg-start">Joined Tournaments</h4>
  </div>

  {{! tournaments }}
{{#if joinedTournaments}}
  <div class="col-12 d-flex flex-wrap mt-4 d-grid gap-3">
    {{! tournament card }}
    {{#each joinedTournaments}}

      {{> archiveTournament this}}

    {{/each}}
  </div>
  {{else}}

<p class="text-white text-center ">You have not joined any tournaments!</p>

{{/if}}
</div>