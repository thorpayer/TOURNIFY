<div class="px-5 py-4">
  <h5 class="text-info fw-bold">Create New Tournament</h5>
  <form action="/tournaments/create-tournament" method="POST" enctype="multipart/form-data">
    <div class="d-flex mt-3 flex-column flex-md-row">

      <div class="col-12 col-md-7 bg-dark p-4 shadow-lg h-min">
        {{! tournament name and platforms }}
        <div class="d-flex w-100 justify-content-between">
          <div class="d-flex flex-column w-100 me-2">
            <label for="name" class="text-info">Tournament Name</label>
            <input
              type="text"
              name="name"
              required
              class="mt-2 border-info rounded custom-inputstyle"
            />
          </div>

          <div class="d-flex flex-column w-100">
            <label for="gamePlatform" class="text-info">Gaming Platform</label>
            {{! <input type="text" class=""/> }}
            <select
              name="gamePlatform"
              required
              class="p-2 mt-2 border-info rounded custom-inputstyle"
            >
              <option value="">Choose Gaming Platform</option>
              <option value="XBox">XBox</option>
              <option value="PC">PC</option>
              <option value="Playstation">Playstation</option>
              <option value="Mobile">Mobile</option>
            </select>
          </div>
        </div>

        {{! description }}
        <div class="d-flex flex-column mt-4">
          <label for="description" class="text-info">Description</label>
          <textarea
            name="description"
            cols="30"
            rows="20"
            required
            class="p-2 mt-2 border-info rounded"
          ></textarea>
        </div>

      </div>

      {{! about tournament }}
      <div
        class="col-12 col-md-5 bg-dark ms-md-4 mt-4 mt-md-0 p-4 shadow-lg h-min"
      >

        {{! game }}
        <div class="d-flex flex-column w-100">
          <label for="game" class="text-info">Game</label>
          <input
            type="text"
            name="game"
            required
            class="mt-2 border-info rounded custom-inputstyle"
          />
        </div>

        {{! start date }}
        <div class="d-flex flex-column w-100 mt-3">
          <label for="startDate" class="text-info">Tournament Start Date</label>
          <input
            type="date"
            name="startDate"
            required
            class="mt-2 border-info rounded custom-inputstyle"
          />
        </div>

        {{! end tournament }}
        <div class="d-flex flex-column w-100 mt-3">
          <label for="endDate" class="text-info">Tournament End Date</label>
          <input
            type="date"
            name="endDate"
            required
            class="mt-2 border-info rounded custom-inputstyle"
          />
        </div>
        {{! fee }}
        <div class="d-flex flex-column w-100 mt-3">
          <label for="fee" class="text-info">Entry Fee</label>
          <input
            type="text"
            name="fee"
            required
            class="mt-2 border-info rounded custom-inputstyle"
          />
        </div>

        {{! location }}
        <div class="d-flex flex-column w-100 mt-3">
          <label for="location" class="text-info">Tournament Location</label>
          <input
            type="text"
            name="location"
            required
            class="mt-2 border-info rounded custom-inputstyle"
          />
        </div>

        {{! Prize }}
        <div class="d-flex flex-column w-100 mt-3">
          <label for="prize" class="text-info">Prize Pool</label>
          <input
            type="text"
            name="prize"
            required
            class="mt-2 border-info rounded custom-inputstyle"
          />
        </div>

        <div class="d-flex flex-column w-100 mt-3">
          <label for="prize" class="text-info">Tournament Banner Image</label>
          {{! <input
          type="text"
          name="prize"
          class="mt-2 border-info rounded custom-inputstyle"
        /> }}
          <input
            class="form-control form-control-sm mt-2"
            id="formFileSm"
            required
            name="banner"
            type="file"
            accept="image/jpeg, image/png, image/jpg"
            onchange="handleImageSelect(event)"
          />
        </div>

        {{! show selected image here }}
        <div class="selected-banner mt-3 w-100">
          <img
            id="selectedImage"
            src=""
            alt="Selected Banner"
            class="w-100 h-50 mt-3"
          />
        </div>

        <div class="mt-3">
          <button
            class="mt-4 px-2 py-2 bg-info border border-0 text-black fw-bold fs-6 shadow w-100"
            type="submit"
          >Create New Tournament</button>
        </div>
      </div>
    </div>
  </form>

</div>