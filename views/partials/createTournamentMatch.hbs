<button
  type="button"
  class="btn btn-primary w-100 bg-info text-black text-decoration-none p-2 mt-2 text-center"
  data-bs-toggle="modal"
  data-bs-target="#createMatch"
>
  Add Match
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="createMatch"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="createMatchLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h1 class="modal-title fs-5 text-info" id="createMatchLabel">Add Match
          to Stage</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <form action="/matches/tournaments/{{_id}}/stages/matches" method="post">
        <div class="modal-body">
          <div class="d-flex flex-column">
            <label for="player1" class="text-info mb-2">Player 1</label>
            <select name="player1" class="mt-2 p-2 rounded-2 border-0">
              {{#each registrations}}
                <option value="">Choose Player 1</option>
                <option value="{{_id}}">{{fullname}}</option>
              {{/each}}
            </select>
          </div>
        </div>

        <div class="modal-body">
          <div class="d-flex flex-column">
            <label for="player2" class="text-info mb-2">Player 2</label>
            <select name="player2" class="mt-2 p-2 rounded-2 border-0">
              {{#each registrations}}
                <option value="">Choose Player 2</option>
                <option value="{{_id}}">{{fullname}}</option>
              {{/each}}
            </select>
          </div>
        </div>

        <div class="modal-body">
          <div class="d-flex flex-column">

            <label for="stageId" class="text-info mb-2">Add Match to Stage</label>
            <select name="stageId" class="mt-2 p-2 rounded-2 border-0">
              {{#each stages}}
                <option value="">Choose Stage</option>
                <option value="{{_id}}">{{name}}</option>
              {{/each}}
            </select>
          </div>
        </div>

        <div class="modal-body">
          <div class="d-flex flex-column">
            <label for="matchDate" class="text-info mb-2">Match Date</label>
            <input
              type="date"
              class="mt-2 p-2 rounded-2 border-0"
              name="matchDate"
            />
          </div>
        </div>

        <div class="modal-footer w-100 d-flex justify-content-between">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >Cancel
          </button>
          <button type="submit" class="btn btn-info">
            Add Match
          </button>
        </div>
      </form>

    </div>
  </div>
</div>